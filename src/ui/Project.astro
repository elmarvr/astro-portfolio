---
import Icon from 'astro-icon';
import Image from './Image.astro';

export interface Props {
  title: string;
  siteUrl: string;
  imageUrl: string;

  githubUrl?: string;
  index: number;


  // skills: SkillProps[];
}

const { index, title, imageUrl, siteUrl } = Astro.props;

const reverse = index % 2 === 1;
---

<div
  data-project={index}
  class:list={["flex flex-col-reverse sm:flex-row gap-x-12 gap-y-12", reverse && "sm:flex-row-reverse"]}
>
  <div class="column flex-1">
    <Image
      alt={`Foto van ${title}`}
      src={imageUrl}
      height={1200}
      aspectRatio="4:2"
      class:list={[
        "transition",
        reverse ? "[&:not(:hover)]:sm:flip-right" : "[&:not(:hover)]:sm:flip-left"
      ]}
    />
  </div>

  <div  class="column flex-1 gap-4 flex flex-col items-start">
    <h3 class="text-xl text-slate-300 font-bold">{title}</h3>

    
    <div class="prose prose-dark">
      <slot />
    </div>

    {/* <div className="flex gap-4 flex-wrap pt-2">
      {props.skills.map((skill) => (
        <div className="text-slate-300 font-medium rounded  gap-2 flex items-center">
          <Icon name={skill.frontmatter.icon} size="16" />
          {skill.frontmatter.title}
        </div>
      ))}
    </div> */}

    <div class="flex-1" />

    <a
      href={siteUrl}
      class="flex gap-2 transition items-center border border-fuchsia-500 px-4 rounded text-fuchsia-500 hover:bg-fuchsia-500 hover:bg-opacity-10 py-2 font-medium"
    >
     <Icon size={20} pack="tabler" name="external-link" />
      Naar website
    </a>
  </div>
</div>

