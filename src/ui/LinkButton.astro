---
export interface LinkButtonProps extends astroHTML.JSX.AnchorHTMLAttributes {
  variant?: "filled" | "outline",
}

type Props = LinkButtonProps;

const { class: className, "class:list": classList, variant = "outline", ...props } = Astro.props;

const variantStyle = ({
  filled: "bg-fuchsia-500 hover:bg-fuchsia-600 text-white", 
  outline: "border border-fuchsia-500 text-fuchsia-500 hover:bg-fuchsia-500 hover:bg-opacity-10"
})[variant];

---


<a
  {...props}
  class:list={[
    className,
    classList,
    variantStyle,
    "flex transition-colors gap-2 items-center min-w-[5rem] px-4 py-1.5 rounded font-medium"
  ]}
>
  <slot name="icon" />  
  
  <div class="flex flex-1 justify-center">
    <slot />
  </div>
</a>