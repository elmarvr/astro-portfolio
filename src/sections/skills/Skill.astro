---
import Prose from "@/ui/Prose.astro";
import { Icon } from "astro-icon";

export interface SkillFrontmatter {
  icon: string;
  title: string;
  name: string;
  url: string;
}

export interface SkillProps extends Omit<SkillFrontmatter, "name"> {
  class?: string;
}

type Props = SkillProps;

const { url, icon, title, class: className = "" } = Astro.props;
---

<div
  class:list={[
    className,
    "flex flex-col items-start rounded border border-slate-700 bg-gradient-to-tr from-slate-900 to-slate-800"
  ]}
>
  <a href={url} class="flex text-sm transition items-center gap-4 border-b border-slate-700 w-full py-2 px-4 hover:bg-slate-800">
    <Icon name={icon} size={30} />
    <p class="text-slate-300 font-medium">{title}</p>
  </a>

  <Prose class="p-4">
    <slot />
  </Prose>
</div>